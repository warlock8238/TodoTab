{
  "manifest_version": 3,
  "name": "待办提醒助手",
  "version": "1.0",
  "description": "记录并提醒你的待办事项，每次打开新标签页时都会显示",
  "permissions": [
    "storage",
    "tabs",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "待办提醒助手"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 